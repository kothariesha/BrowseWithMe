{
  "manifest_version": 2,

  "name": "SeeAskShop plugin",
  "description": "This extension will assist blind and visually impaired users while shopping online.",
  "version": "1.0",

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "index.html"
  },
  "permissions": ["tabs","contextMenus", "<all_urls>","storage"],
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://code.responsivevoice.org; object-src 'self'"
}
